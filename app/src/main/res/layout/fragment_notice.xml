<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/action_black_common_bar" />

    <com.flyco.tablayout.SlidingTabLayout
        app:tl_textsize="16sp"
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:background="#ffffff"
        tl:tl_indicator_color="@color/orangered"
        tl:tl_textSelectColor="@color/orangered"
        tl:tl_textUnselectColor="@color/gray"
        tl:tl_underline_color="@color/lightgray"
        app:tl_indicator_height="3dp"
        app:tl_indicator_width_equal_title="true"
        app:tl_indicator_corner_radius="3dp"
        tl:tl_underline_height="0.5dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>