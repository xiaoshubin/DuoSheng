<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--Banner-->
    <com.youth.banner.Banner
        android:visibility="gone"
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        />
    <!--menu-->
    <android.support.v7.widget.RecyclerView
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:id="@+id/recycler_view_main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.youth.banner.Banner
        android:visibility="gone"
        android:id="@+id/banner_middle"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>

    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/img_gui" />

        <ImageView
            android:layout_marginLeft="8dp"
            android:scaleType="fitXY"
            android:id="@+id/iv_invite_friends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/img_inv" />
    </LinearLayout>
    <View style="@style/HorizontalLine" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_main_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:textStyle="bold"
        android:background="@color/bg_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="一 为您精选 一"
        android:textColor="@color/tab_orange"
        android:textSize="16sp" />
</LinearLayout>