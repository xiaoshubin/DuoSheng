<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

   <View
       android:layerType="software"
       android:background="@drawable/white_dot_line"
       android:layout_width="match_parent"
       android:layout_height="68dp"/>
   <ImageView
       android:src="@mipmap/arc_dotted_line"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/round14_orangered_bg"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="复制淘宝天猫商品标题，领券拿返利" />
        <ImageView
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/guide_coyp_title_pic" />
    </LinearLayout>

    <LinearLayout
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingLeft="32dp"
        android:gravity="center"
        android:background="@drawable/round_orange_btn_bg"
        android:clickable="false"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    <TextView
        android:textColor="@color/white"
        android:textSize="16sp"
        android:paddingRight="4dp"
        android:clickable="false"
        android:text="试试搜索该商品"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/white_triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</LinearLayout>

</LinearLayout>