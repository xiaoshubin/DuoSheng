<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="290dp"
        android:layout_height="wrap_content">

    <TextView
        android:gravity="bottom|center_horizontal"
        android:background="@drawable/top_round_orange_bg"
        android:layout_width="fill_parent"
        android:layout_height="133dp"
        android:padding="16dp"
        android:text="您是否搜索以下产品"
        android:textColor="@color/white"
        android:textSize="18sp" />
        <LinearLayout
            android:gravity="center"
            android:background="@drawable/bottom_round_white_bg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/tv_search_msg"
                android:gravity="bottom|center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                tools:text="预售Lily2019春新款拼色荷叶边系带白色长袖套头衬衫雪纺衫8922"
                android:textColor="@color/text_gray"
                android:textSize="16sp" />
            <Button
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_below="@+id/view_line"
                android:text="搜索"
                android:textColor="@color/white"
                android:id="@+id/btn_search"
                android:layout_height="wrap_content"
                android:layout_width="190dp"
                android:background="@drawable/round_orange_btn_bg"
                android:padding="12dp"
                />
        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:layout_centerHorizontal="true"
        android:src="@mipmap/img_search"
        android:layout_width="match_parent"
        android:layout_height="130dp" />
</RelativeLayout>
