<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    tools:background="@color/text_black"
    android:orientation="vertical">

    <View
        android:layout_gravity="right"
        android:id="@+id/view_dotted_rect"
        android:background="@drawable/white_dot_line"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <ImageView
        android:layout_marginLeft="64dp"
        android:layout_marginTop="-8dp"
        android:layout_marginRight="32dp"
        android:layout_gravity="right"
        android:src="@mipmap/arc_dotted_right_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:textColor="@color/white"
            android:textSize="16sp"
            android:clickable="false"
            android:text="想让粉丝联系到您？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#FFAF44"
                android:textSize="16sp"
                android:clickable="false"
                android:text="点击右上方"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/white"
                android:textSize="16sp"
                android:clickable="false"
                android:text="填写"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#FFAF44"
                android:textSize="16sp"
                android:clickable="false"
                android:text="您的微信号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_white_rim_transparent_bg"
            android:text="朕知道了"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>