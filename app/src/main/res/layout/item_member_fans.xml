<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/round9_white_bg"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/iv_head_icon"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher_round"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_month_predict_income"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@+id/iv_head_icon"
        android:text="海龟晒肚皮"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <ImageView
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/tv_month_predict_income"
        android:id="@+id/iv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/tv_nickname"
        android:layout_toRightOf="@+id/tv_nickname"
        android:contentDescription="@string/vip_level"
        android:src="@mipmap/vip_level_1" />
    <TextView
        android:id="@+id/tv_month_predict_income"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/iv_head_icon"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:text="本月预估收益：0.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_month_predict_income"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/iv_head_icon"
        android:layout_toRightOf="@+id/iv_head_icon"
        android:text="累计预估收益：239.18"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_fans_num"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:text="173****5773"
        android:textSize="12sp" />
    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/tv_fans_num"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:text="粉丝：23人"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_fans_num"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="2019-03-21"
        android:textSize="12sp" />

</RelativeLayout>