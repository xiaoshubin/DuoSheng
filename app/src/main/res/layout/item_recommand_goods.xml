<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/round9_white_bg"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_pict_url"
        android:src="@mipmap/logo"
        android:layout_width="match_parent"
        android:layout_height="174dp" />
    <LinearLayout
        android:padding="6dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_user_type"
                android:src="@mipmap/logo"
                android:layout_width="14dp"
                android:layout_height="14dp" />
            <TextView
                android:id="@+id/tv_shop_title"
                android:textColor="@color/text_gray"
                android:layout_marginLeft="4dp"
                android:textSize="12sp"
                android:text="天真贝比旗舰店"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="6dp"
            android:maxLines="2"
            android:textColor="@color/text_black"
            android:textSize="14sp"
            android:text="婴儿湿巾80抽x5包便携式迷你带盖批发新生儿棉柔巾…"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.qiqia.duosheng.custom.CouponBg
                android:id="@+id/custom_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_commission_price"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/round2_pink_bg"
                android:layout_alignParentRight="true"
                android:textColor="@color/tab_orange"
                android:layout_marginLeft="2dp"
                android:textSize="12sp"
                android:text="预估收益 ￥10.8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/tab_orange"
                android:textSize="10sp"
                android:text="￥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_zk_final_price"
                android:textColor="@color/tab_orange"
                android:textSize="16sp"
                android:text="94"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_reserve_price"
                android:textColor="@color/text_gray"
                android:textSize="10sp"
                android:text="￥149.9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:gravity="right"
                android:id="@+id/tv_volume"
                android:textSize="10sp"
                android:text="已售 375已售"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>