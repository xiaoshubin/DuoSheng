<?xml version="1.0" encoding="utf-8"?>


<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/orangered_top_bg">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:background="@drawable/orangered_top_bg"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_overlapTop="80dp"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--头像-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/round9_white_bg"></LinearLayout>

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_head"
                    android:layout_centerHorizontal="true"
                    android:padding="8dp"
                    android:text="点击修改头像"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </RelativeLayout>
            <!--昵称，性别，淘宝授权-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/round9_white_bg"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tablayout_height"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tablayout_height"
                        android:drawableLeft="@mipmap/set_nc"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="昵称"
                        android:textColor="@color/text_black"
                        android:textSize="14sp" />

                    <TextView
                        android:text="@{user.nickname}"
                        android:id="@+id/tv_nick"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tablayout_height"
                        android:drawableRight="@mipmap/icon_arr"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp"
                        tools:text="海龟晒肚皮" />
                </LinearLayout>


                <View style="@style/HorizontalLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tablayout_height"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tablayout_height"
                        android:drawableLeft="@mipmap/set_xb"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="性别"
                        android:textColor="@color/text_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tablayout_height"
                        android:drawableRight="@mipmap/icon_arr"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical|right"
                        android:text="未设置"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp" />
                </LinearLayout>


                <View style="@style/HorizontalLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tablayout_height"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tablayout_height"
                        android:drawableLeft="@mipmap/set_tbsq"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="淘宝授权"
                        android:textColor="@color/text_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_tb_auth_login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tablayout_height"
                        android:drawableRight="@mipmap/icon_arr"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical|right"
                        android:text="去授权"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
            <!--修改手机号，微信客服更换-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/round9_white_bg"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tablayout_height"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tablayout_height"
                        android:drawableLeft="@mipmap/set_xgsj"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="修改手机号"
                        android:textColor="@color/text_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_update_phone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tablayout_height"
                        android:drawableRight="@mipmap/icon_arr"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp"
                        tools:text="173****5773" />
                </LinearLayout>

                <View style="@style/HorizontalLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tablayout_height"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tablayout_height"
                        android:drawableLeft="@mipmap/set_wxgh"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="微信客服更换"
                        android:textColor="@color/text_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_update_wxkf"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tablayout_height"
                        android:drawableRight="@mipmap/icon_arr"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp"
                        tools:text="SADSFFGF" />
                </LinearLayout>
            </LinearLayout>
            <!--消息通知，清除缓存,关于我们,版本号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/round9_white_bg"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_notice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tablayout_height"
                    android:drawableLeft="@mipmap/set_xxtz"
                    android:drawableRight="@mipmap/icon_arr"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="消息通知"
                    android:textColor="@color/text_black"
                    android:textSize="14sp" />

                <View style="@style/HorizontalLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tablayout_height"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tablayout_height"
                        android:drawableLeft="@mipmap/set_qchc"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="清除缓存"
                        android:textColor="@color/text_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_clean_cache"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tablayout_height"
                        android:drawableRight="@mipmap/icon_arr"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp"
                        tools:text="235.6MB" />
                </LinearLayout>

                <View style="@style/HorizontalLine" />

                <TextView
                    android:id="@+id/tv_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tablayout_height"
                    android:drawableLeft="@mipmap/set_gywm"
                    android:drawableRight="@mipmap/icon_arr"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="关于我们"
                    android:textColor="@color/text_black"
                    android:textSize="14sp" />

                <View style="@style/HorizontalLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tablayout_height"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tablayout_height"
                        android:drawableLeft="@mipmap/set_bbh"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="版本号"
                        android:textColor="@color/text_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_version_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tablayout_height"
                        android:drawableRight="@mipmap/icon_arr"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp"
                        tools:text="版本V3.0.4" />
                </LinearLayout>
            </LinearLayout>
            <!--退出按钮-->
            <Button
                android:id="@+id/btn_login_out"
                style="@style/DefaultOrangeButton"
                android:layout_margin="16dp"
                android:text="退出登录" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/layout_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/orangered_top_bg"
        android:orientation="vertical"
        app:layout_behavior="com.qiqia.duosheng.custom.ColorGradBehavior">
        <View
            android:id="@+id/ele_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/electricity_bar_height" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:src="@mipmap/icon_back" />

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_back"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="@string/back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingRight="8dp"
                android:textSize="14sp"
                tools:text="@string/menu" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:padding="8dp"
                android:src="@mipmap/help_white_icon"
                android:visibility="gone"
                tools:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>