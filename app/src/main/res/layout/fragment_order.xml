<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:contentScrim="@drawable/bar_gradual_black_bg"
        app:elevation="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@drawable/bar_gradual_black_bg"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/action_black_common_bar" />
                    <RadioGroup
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/main_tab_height">
                        <RadioButton android:checked="true" android:id="@+id/rb1" style="@style/OrangeRadioButton" android:text="我的订单"/>
                        <View style="@style/VerticalLine" android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>
                        <RadioButton android:id="@+id/rb2" style="@style/OrangeRadioButton" android:text="团队订单"/>
                    </RadioGroup>
                </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="@dimen/electricity_bar_height" />
        </android.support.design.widget.CollapsingToolbarLayout>
        <!--筛选排序-->
        <android.support.design.widget.TabLayout
            app:tabTextAppearance="@style/WhiteTabTextAppearance14"
            app:tabGravity="fill"
            app:tabMaxWidth="0dp"
            app:tabMode="fixed"
            android:layout_margin="8dp"
            android:background="@drawable/round9_white_bg"
            style="@style/WhiteTabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_tab_height">
            <android.support.design.widget.TabItem
                android:text="全部"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.design.widget.TabItem
                android:text="已付款"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.design.widget.TabItem
                android:text="已收货"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.design.widget.TabItem
                android:text="已结算"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.design.widget.TabItem
                android:text="已退款"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TabLayout>
    </android.support.design.widget.AppBarLayout>
    <!--会员列表-->
    <android.support.v7.widget.RecyclerView
        android:layout_marginBottom="24dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior" />
</android.support.design.widget.CoordinatorLayout>