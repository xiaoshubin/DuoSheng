<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>
    <style name="VerticalLine">
        <item name="android:background">@color/line_gray</item>
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="HorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line_gray</item>
    </style>
    <style name="MainTabRadioButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/tab_text_selecter</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="OrangeRadioButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/shop_text_selecter</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultOrangeButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/round_orange_btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <!-- 黄色的提醒消息 -->
    <style name="YellowNoticeText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#FFF3D6</item>
        <item name="android:textColor">#B8842C</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="DefaultTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/DefaultTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
    <style name="DefaultTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MainTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextAppearance">@style/MainTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/text_black</item>
    </style>
    <style name="MainTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="WhiteTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorColor">@color/tab_orange</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/WhiteTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/tab_orange</item>
    </style>
    <style name="WhiteTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="WhiteTabTextAppearance14" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="GuideTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorColor">@color/tab_orange</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextAppearance">@style/GuideTabTextAppearance</item>
        <item name="tabSelectedTextColor">#FDB657</item>
    </style>
    <style name="GuideTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#70FDB657</item>
        <item name="textAllCaps">false</item>
    </style>
    <!-- 百川SDK在Android8上需要配置此项,否则闪退 -->
    <style name="AlibcLoginTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
    <style name="MenuStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">right|bottom</item>
    </style>
    <style name="MenuItemStyle">
        <item name="android:layout_marginRight">2.5dp</item>
        <item name="android:layout_marginBottom">2.5dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">right|bottom</item>
    </style>

    <style name="text_flag_01">
        <item name="android:padding">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/round_white_bg</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
